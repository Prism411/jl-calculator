<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema aplicado durante a inicialização do aplicativo (ambos os modos) -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Mostra a splash screen na atividade. Automaticamente removida quando
             o Flutter desenha seu primeiro frame -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <!-- Tema aplicado assim que o processo inicia. Esse tema determina a cor
         da janela do Android enquanto sua UI do Flutter inicializa e também por
         trás de sua UI do Flutter enquanto está rodando.

         Esse Tema é usado a partir da V2 do embedding do Android do Flutter. -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>
</resources>
